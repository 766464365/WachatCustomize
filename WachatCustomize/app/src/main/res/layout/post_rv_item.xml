<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y500">

    <ImageView
        android:id="@+id/iv_avatar"
        android:layout_marginLeft="@dimen/x60"
        android:layout_marginTop="@dimen/x60"
        android:background="@color/bg_ff2faeed"
        android:layout_width="@dimen/x130"
        android:layout_height="@dimen/x130" />
    <TextView
        android:id="@+id/tv_name"
        android:text="i am name"
        android:textColor="@color/text_5A688E"
        android:layout_toRightOf="@+id/iv_avatar"
        android:textStyle="bold"
        android:layout_alignTop="@+id/iv_avatar"
        android:layout_marginLeft="@dimen/x40"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_content"
        android:layout_below="@+id/tv_name"
        android:layout_toRightOf="@+id/iv_avatar"
        android:layout_marginLeft="@dimen/x40"
        android:textColor="@color/text_ff333333"
        android:textStyle="bold"
        android:text="我是你爸爸"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:id="@+id/line"
        android:background="@color/text_ffbbbbbb"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y2">

    </RelativeLayout>

</RelativeLayout>

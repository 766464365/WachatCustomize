<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y144">
    <ImageView
        android:id="@+id/iv"
        android:background="@color/color_black"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/x30"
        android:layout_width="@dimen/x110"
        android:layout_height="@dimen/x110" />
    <TextView
        android:id="@+id/tv_name"
        android:layout_toRightOf="@+id/iv"
        android:text="ha哈哈哈"
        android:layout_marginLeft="@dimen/x30"
        android:layout_marginTop="@dimen/y10"
        android:textColor="@color/text_ff333333"
        android:textSize="@dimen/x45"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_lastTalk"
        android:text="[图片]"
        android:layout_toRightOf="@+id/iv"
        android:layout_below="@id/tv_name"
        android:layout_marginLeft="@dimen/x30"
        android:textColor="@color/text_9E9E9E"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_time"
        android:text="18:42"
        android:layout_marginTop="@dimen/x20"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/x60"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:background="@color/color_hint_gray"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y2"></RelativeLayout>
</RelativeLayout>

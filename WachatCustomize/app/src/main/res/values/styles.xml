<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BottomDialog" parent="@android:style/Theme.Dialog">


        <!-- 背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- 浮于Activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- Dialog以外的区域模糊效果 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- Dialog进入及退出动画 -->
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
    </style>
    <!-- ActionSheet进出动画 -->
    <style name="DialogAnimation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/actionsheet_dialog_in</item>
        <item name="android:windowExitAnimation">@anim/actionsheet_dialog_out</item>
    </style>

    <!-- 首页底部各Tab的样式 -->
    <style name="HomeRadioButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/radio_btn_text_color</item>
        <item name="android:textSize">@dimen/x36</item>
        <item name="android:drawableTop">@drawable/radio_btn_drawble_home</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:background">#00000000</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:drawablePadding">@dimen/y1</item>
    </style>

    <!--标题栏样式-->
    <style name="Title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/y144</item>
        <item name="android:textColor">@color/colortitilebarblue</item>
        <item name="android:textSize">@dimen/x54</item>
        <item name="android:gravity">center</item>
    </style>

    <!--首页待发订单内的字体样式-->
    <style name="HomeItemOrderText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_ff888888</item>
        <item name="android:textSize">@dimen/x32</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:layout_marginTop">@dimen/y30</item>
    </style>
</resources>
